@model ServiceOfElectronicDevices.Models.AddOrderViewModel

@{
    ViewBag.Title = "AddOrder";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <h4>Dodaj zamówienie</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.Label("Klienci: ", new { @class = "col-md-1 control-label" })
        <div class="col-md-11">
            @Html.DropDownListFor(m => m.UserId, Model.Users, new { @class = "form-control" })
            @Html.ActionLink("Dodaj klienta", "Register", "Account", null, new {@class = "btn btn-default"})
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Urządzenie", new {@class = "col-md-1 control-label"})
        <div class="col-md-11">
            @Html.DropDownListFor(m => m.DeviceId, Model.Devices, new { @class = "form-control" })
            @Html.ActionLink("Dodaj urządzenie", "AddDevice", "Order", new {@class = "btn btn-default"})
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Opis awarii", new { @class = "col-md-1 control-label" })
        <div class="col-md-11">
            @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-1 col-md-10">
            <input type="submit" class="btn btn-success" value="Dodaj" />
        </div>
    </div>
}
        </div>

    </div>
</div>

<h2>Zarządzanie dostępnymi podzespołami</h2>
<hr />


<div style="opacity: 0.9">
    <div class="col-xs-6">
        <div class="panel panel-success">
            <div class="panel-heading">
                <h3 class="panel-title">Dodaj typ podzespołu</h3>
            </div>

            <div class="panel-body">
                @using (Html.BeginForm("AddComponentType", "UserRoles"))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)

                    <p>
                        @Html.TextBox("componentType", null, new { @class = "form-control" })
                    </p>

                    <input type="submit" value="Dodaj" class="btn btn-success" />
                }
                <hr />
            </div>
        </div>
    </div>

    <div class="col-xs-6">
        <div class="panel panel-success">
            <div class="panel-heading">
                <h3 class="panel-title">Dodaj urządzenie</h3>
            </div>

            <div class="panel-body">
                @using (Html.BeginForm("AddComponent", "UserRoles"))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <div>
                        @Html.Label("Marka: ", new { style = "color: black" })
                        @Html.TextBox("Brand", null, new { @class = "form-control" })
                        @Html.Label("Model: ", new { style = "color: black" })
                        @Html.TextBox("Model", null, new { @class = "form-control" })
                        @Html.Label("Cena: ", new { style = "color: black" })
                        @Html.TextBox("Price", null, new { @class = "form-control" })
                        @Html.Label("Typ urządzenia: ", new { style = "color: black" })
                        @Html.DropDownList("PartId", Model.ComponentsTypes, new { @class = "form-control" })
                    </div>
                    <input type="submit" value="Dodaj" class="btn btn-success" />
                }
                <hr />
            </div>
        </div>
    </div>
</div>